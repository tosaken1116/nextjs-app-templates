{
  "name": "template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:unit": "jest  --passWithNoTests",
    "new:ui": "hygen generator ui",
    "new:model": "hygen generator model",
    "new:page": "hygen generator page",
    "new:domain": "hygen generator domain",
    "prepare": "husky install",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "fmt": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss}'",
    "check:lint": "eslint 'src/**/*.{ts,tsx}' --report-unused-disable-directives --max-warnings 0",
    "check:cspell": "cspell -c ./cspell.config.json \"./src/**/*\" --unique --no-progress --no-summary",
    "check:markuplint": "markuplint -p \"./src/**/*.tsx\"",
    "check": "run-p check:* test:*",
    "ci:test-group": "run-p test:*",
    "ci:check": "run-p check:*",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "engines": {
    "npm": "pnpm please",
    "yarn": "pnpm please",
    "bun": "pnpm please"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "pnpm check:lint --fix",
      "pnpm fmt"
    ]
  },
  "dependencies": {
    "next": "15.4.1",
    "react": "19.1.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.0",
    "@markuplint/jsx-parser": "^4.0.0",
    "@markuplint/react-spec": "^4.0.1",
    "@storybook/addon-essentials": "^8.0.5",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.5",
    "@storybook/addon-onboarding": "^8.1.5",
    "@storybook/blocks": "^8.0.6",
    "@storybook/nextjs": "^8.0.6",
    "@storybook/react": "^8.0.5",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^16.0.0",
    "@tsconfig/strictest": "^2.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "22.15.1",
    "@types/react-dom": "19.0.1",
    "@types/react": "19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.1",
    "autoprefixer": "^10.4.16",
    "cspell": "^9.1.5",
    "eslint": "9.25.1",
    "eslint-config-next": "15.4.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-storybook": "^9.0.7",
    "eslint-plugin-unused-imports": "^4.0.1",
    "husky": "^9.0.1",
    "hygen": "^6.2.11",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^29.6.4",
    "lint-staged": "^16.1.2",
    "markuplint": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier": "^3.0.1",
    "storybook": "^9.0.16",
    "tailwindcss": "^4.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "5.8.2"
  },
  "volta": {
    "node": "20.6.1",
    "npm": "10.1.0",
    "pnpm": "8.7.4",
    "yarn": "3.6.3"
  }
}
